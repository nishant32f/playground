generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model StoreCredential {
  id              String   @id @default(cuid())
  name            String   // Friendly name (e.g., "Dev Store - Theme App")
  storeUrl        String   // e.g., "my-store.myshopify.com"
  adminApiToken   String   // Admin API access token
  storefrontToken String?  // Optional Storefront API token
  scopes          String   // Comma-separated scopes (e.g., "read_themes,write_themes")
  apiVersion      String   @default("2025-01")
  isActive        Boolean  @default(false)
  notes           String?  // Optional notes about this credential
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([storeUrl, name])
}
